@model TubsWeb.ViewModels.LongLineSetViewModel
<fieldset>
    <legend>Comments</legend>
    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th class="span2">Date</th>
                <th class="span2">Time</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
        @* TODO Add an icon showing whether the comment happend during set or haul (up/down arrow just like Set/Haul log) *@
        @foreach(var comment in Model.Comments)
        {
            if (null == comment) { continue; }
            <tr>
                <td>@Html.DisplayFor(m => comment.DateOnly, new { format = "d" })</td>
                <td>@comment.LocalTime</td>
                <td>@comment.Details</td>
            </tr>
        }
        </tbody>
    </table>
</fieldset>
<hr />
@* For flow reasons, this belongs in the 'Comments' section rather than here *@
<div class="row">
    <div class="span3">
        <label><strong>Total Baskets Observed</strong></label>
        <div>@Html.DisplayFor(m => m.TotalObservedBaskets)</div>
    </div>
    <div class="span3">
        <label><strong>GEN-3 Events?</strong></label>
        <div>@Html.DisplayFor(m => m.HasGen3Event)</div>
    </div>
    <div class="span3">
        <label><strong>Journal Page</strong></label>
        <div>@Html.DisplayFor(m => m.DiaryPage)</div>
    </div>
</div>     


<div class="accordion-group" data-bind="with: Inspection">
    <div class="accordion-heading">
        <a class="accordion-toggle" data-toggle="collapse" data-parent="#ll-accordion" href="#safetyInspection">
            <i class="icon-chevron-right"></i> Safety Equipment
        </a>
    </div>
    <div id="safetyInspection" class="accordion-body collapse">
        <div class="accordion-inner">
            @* Lifejacket / Buoy count *@                  
            <div class="row-fluid">
                <div class="span3">
                    <label><strong>Lifejacket Provided?</strong></label>
                    <select id="LifejacketProvided" name="LifejacketProvided" data-bind="value: LifejacketProvided, options: $root.AvailabilityValues" class="input-small"></select>
                </div>
                <div class="span3">
                    <label><strong>Suitable Size?</strong></label>
                    <select id="LifejacketSizeOk" name="LifejacketSizeOk" data-bind="value: LifejacketSizeOk, options: $root.BooleanValues" class="input-small"></select>
                </div>
                <div class="span3">
                    <label><strong>Availability</strong></label>
                    <select id="LifejacketAvailability" name="LifejacketAvailability" data-bind="value: LifejacketAvailability" class="input-small">
                        <option></option>
                        <option>Easy</option>
                        <option>Moderate</option>
                        <option>Hard</option>
                    </select>
                </div>
                <div class="span3">
                    <label><strong>Life Buoys/Life Rings</strong></label>
                    <input id="BuoyCount" name="BuoyCount" type="number" min="0" data-bind="value: BuoyCount" class="input-mini" />
                </div>
            </div>
            <div class="row-fluid">
                <div class="span3">
                    <label><strong>EPIRB Type</strong></label>
                    <span>406</span>
                </div>
                <div class="span3">
                    <label><strong>Total</strong></label>
                    <input id="Epirb406Count" name="Epirb406Count" type="number" min="0" data-bind="value: Epirb406Count" class="input-mini" />
                </div>
                <div class="span3">
                    <label><strong>Expiration</strong></label>
                    <input id="Epirb406Expiration" name="Epirb406Expiration" type="text" data-bind="value: Epirb406Expiration" class="input-small" />
                </div>
            </div>
            <div class="row-fluid">
                <div class="span3">
                    <label><strong>EPIRB Type</strong></label>
                    <input id="OtherEpirbType" name="OtherEpirbType" type="text" data-bind="value: OtherEpirbType" class="input-small" />
                </div>
                <div class="span3">
                    <label><strong>Total</strong></label>
                    <input id="OtherEpirbCount" name="OtherEpirbCount" type="number" min="0" data-bind="value: OtherEpirbCount" class="input-mini" />
                </div>
                <div class="span3">
                    <label><strong>Expiration</strong></label>
                    <input id="OtherEpirbExpiration" name="OtherEpirbExpiration" type="text" data-bind="value: OtherEpirbExpiration" class="input-small" />
                </div>
            </div>
            <div class="row editor-row">
                <div class="span1q compact-header"><strong>Raft</strong></div>
                <div class="span2 compact-header"><strong># of People</strong></div>
                <div class="span2 compact-header"><strong>Date</strong></div>
                <div class="span2 compact-header"><strong>Due/Last</strong></div>
            </div>
            <div class="row editor-row">
                <div class="form-horizontal compact-row">
                    <label class="span1q"><strong>1</strong></label>
                    <input type="number" class="span2" data-bind="value: LifeRaft1Capacity"/>
                    <input type="text" class="span2" placeholder="mm/yy" data-bind="value: LifeRaft1Inspection" />
                    <select class="span2" data-bind="options: LastOrDue, value: LifeRaft1LastOrDue"></select>
                </div>
            </div>
            <div class="row editor-row">
                <div class="form-horizontal compact-row">
                    <label class="span1q"><strong>2</strong></label>
                    <input type="number" class="span2" data-bind="value: LifeRaft2Capacity"/>
                    <input type="text" class="span2" placeholder="mm/yy" data-bind="value: LifeRaft2Inspection" />
                    <select class="span2" data-bind="options: LastOrDue, value: LifeRaft2LastOrDue"></select>
                </div>
            </div>
            <div class="row editor-row">
                <div class="form-horizontal compact-row">
                    <label class="span1q"><strong>3</strong></label>
                    <input type="number" class="span2" data-bind="value: LifeRaft3Capacity"/>
                    <input type="text" class="span2" placeholder="mm/yy" data-bind="value: LifeRaft3Inspection" />
                    <select class="span2" data-bind="options: LastOrDue, value: LifeRaft3LastOrDue"></select>
                </div>
            </div>
            <div class="row editor-row">
                <div class="form-horizontal compact-row">
                    <label class="span1q"><strong>4</strong></label>
                    <input type="number" class="span2" data-bind="value: LifeRaft4Capacity"/>
                    <input type="text" class="span2" placeholder="mm/yy" data-bind="value: LifeRaft4Inspection" />
                    <select class="span2" data-bind="options: LastOrDue, value: LifeRaft4LastOrDue"></select>
                </div>
            </div>
        </div>
    </div>
</div>

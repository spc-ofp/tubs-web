@model TubsWeb.Models.PurseSeineSetViewModel

@{
    // No longer set in controller
    ViewBag.Title = String.Format("Adding Set {0}", Model.MaxSets + 1);
}

@* TODO Maybe add a link back to the index view for this set? *@
@{
    IEnumerable<Tuple<string, string>> crumbs = new List<Tuple<string, string>>()
    {
        Tuple.Create(Url.Action("Index", "Trip"), "Trips"),
        Tuple.Create(Url.Action("Details", "Trip", new { tripId = Model.TripId }), Model.TripNumber ?? "This Trip"),
        Tuple.Create(Url.Action("List", "FishingSet", new { tripId = Model.TripId }), "Sets"),
        Tuple.Create("#", ViewBag.Title)
    };
}

@{ Html.RenderPartial("_BreadCrumbs", crumbs); }

@{ Html.RenderPartial("_FishingSetEditor", Model); }

@section AdditionalScripts {
    @{ Html.RenderPartial("_FishingSetEditorScripts", Model); }
}

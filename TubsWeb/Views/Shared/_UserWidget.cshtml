<ul class="nav pull-right">
@if (@User.Identity.IsAuthenticated)
{
    if ("Forms".Equals(@User.Identity.AuthenticationType, StringComparison.InvariantCultureIgnoreCase))
    {
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">User: @User.Identity.Name&nbsp;<b class="caret"></b></a>
        <ul class="dropdown-menu">
            <li><a href="@Url.Content("~/Account/LogOff")">Log Off</a></li>
            <li><a href="@Url.Content("~/Account/ChangePassword")">Change Password</a></li>
        </ul>
    </li>
    }
    else
    {
    <li><a href="#">User: @User.Identity.Name</a></li>
    }
}
</ul>
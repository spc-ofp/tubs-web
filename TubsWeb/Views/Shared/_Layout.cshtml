<!-- <html lang="en"> -->
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Make use of Chrome Frame optional on a per View basis -->
    @if (ViewBag.UseChromeFrame != null && ViewBag.UseChromeFrame)
    {
    <meta http-equiv="X-UA-Compatible" content="chrome=1">
    }
    <title>@ViewBag.Title</title>
    
    <link rel="alternate" type="application/rss+xml" title="Latest Trips" href="@Url.Action("Rss", "Trip")" />
    @Styles.Render("~/Content/css")
    <style>
      .lookatme {
        color: Red;
        font-weight: bold;
      }
      
      .input-validation-error 
      {
          /* Bootstrap is overriding the color:  In MVC3, this was handled by hooking the validator...*/
          color: #b94a48;
          font-weight: bold;
      }
    </style>
    @RenderSection("AdditionalCss", false) 

    <!-- Use Modernizr instead of html5shim / html5shiv, at least until it breaks -->
    @Scripts.Render("~/bundles/modernizr")

    <!-- Le fav and touch icons -->
    <link rel="shortcut icon" href="/favicon.ico" />
    <!-- // TODO
    <link rel="apple-touch-icon" href="images/apple-touch-icon.png">
    <link rel="apple-touch-icon" sizes="72x72" href="images/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="114x114" href="images/apple-touch-icon-114x114.png">
    -->   
</head>
<body>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="#">Tuna Observer Data System (TUBS)</a>
          <div class="nav-collapse">
            <!-- Conditionally replace Bootstrap static nav with RenderSection(...) -->
            @if (IsSectionDefined("NavBar"))
            {
                @RenderSection("NavBar")
            }
            else
            {
                <ul class="nav pull-left">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Trips<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.RouteLink("Register New Trip", TubsWeb.RouteConfig.CreateTrip)</li>
                            <li>@Html.RouteLink("My Open Trips", TubsWeb.RouteConfig.MyOpenTrips)</li>
                            <li>@Html.RouteLink("My Trips", TubsWeb.RouteConfig.MyTrips)</li>
                            <li>@Html.RouteLink("All Trips", "TripList")</li>                          
                        </ul>
                    </li>
                    <li><a href="@Url.Content("~/")">Home</a></li>
                    <li>@Html.RouteLink("About", new { controller = "Home", action = "About" })</li>
                    @* Redundant for IE, but put it up there in the user's face... *@
                    <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">RSS<b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="@Url.Action("Rss", "Trip")">
                            <img src="~/Content/images/feed-icon.png" width="8" height="8" alt="RSS Feed Icon"/>
                            Latest Trips</a>
                        </li>
                    </ul>
                    </li>     
                </ul>
            }
            @{ Html.RenderPartial("_UserWidget"); }
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    @* Keep a single layout base page for the entire app *@
    @{
        bool hasSidebar = IsSectionDefined("Sidebar");
        string containerClass = "container";
        if (hasSidebar || (ViewBag.UseFluid != null && ViewBag.UseFluid))
        {
            containerClass = "container-fluid";
        }       
    }
    <div class="wrapper">
        <div class="@containerClass">
        @if (hasSidebar)
        {
            <div class="span2">@RenderSection("Sidebar")</div>
            <div class="span10">@RenderBody()</div>
        }
        else
        {
            @RenderBody()
        }          
        </div> 
        <div class="push"><!--//--></div>
    </div>

    <footer>
        <div class="container">
            <p>This is confidential data subject to a @Html.ActionLink("data disclosure policy", "Confidentiality", "Home").</p>
        </div>
    </footer>

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->   
    @Scripts.Render(
        "~/bundles/jquery", 
        "~/bundles/jsextlibs"
    )
    <script src="~/Scripts/jquery.jtruncate.pack.js" type="text/javascript"></script>
    <script src="~/Scripts/tubs.js"></script>
    @*
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.jtruncate.pack.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.23.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-timepicker-addon.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.sparkline.min.js")" type="text/javascript"></script>

    <!-- Might as well load these all the time... -->       
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")"></script>
    *@
    

    @RenderSection("AdditionalScripts", false)
</body>
</html>

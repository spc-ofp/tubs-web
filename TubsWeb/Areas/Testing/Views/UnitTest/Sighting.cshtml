@section ScriptsUnderTest {
    @* Scripts under test *@
    <script src="~/Scripts/App/vm.sighting.js"></script>
}

@section TestData {
    <script>
        var modelAsJson = {};
    </script>
}

@section TestScript {
    @* Unit tests here *@
    <script>
        var viewmodel;
        module("GEN-1 (Sighting)", {
            setup: function () {
                viewmodel = new tubs.sighting(modelAsJson);
            },
            teardown: function () {
                viewmodel = null;
            }
        });
        test("Create viewmodel", function () {
            ok(viewmodel, "ViewModel not null");
            equal(viewmodel.TripNumber(), "DJB / 10-01", "TripNumber correct");
        });
    </script>
}

